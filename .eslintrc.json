{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-dupe-args": 2,
		"no-empty-character-class": 2,
		"no-extra-semi": 2,
		"valid-jsdoc": 2,
		"valid-typeof": 2,
		"no-obj-calls": 2,
		"no-unreachable": 2,
		"no-unexpected-multiline": 2,
		"no-sparse-arrays": 2,
		"no-negated-in-lhs": 2,
		"no-irregular-whitespace": 2,
		"no-invalid-regexp": 2,
		"no-cond-assign": 2,
		"block-scoped-var": 2,
		"max-nested-callbacks": [
			1,
			5
		],
		"max-params": [
			1,
			10
		],
		"comma-dangle": [
			2,
			"never"
		],
		"no-dupe-keys": 2,
		"no-empty": 2,
		"quotes": [
			2,
			"single"
		],
		"semi": [
			2,
			"always"
		],
		"init-declarations": [
			2,
			"always"
		],
		"indent": ["error", 2],
		"no-mixed-requires": 2,
		"no-new-require": 2,
		"no-path-concat": 2,
		"no-process-exit": 2,
		"no-use-before-define": 0,
		"callback-return": 0,
		"no-catch-shadow": 2,
		"no-implicit-coercion": 2,
		"guard-for-in": 0,
		"global-require": 2,
		"handle-callback-err": 2,
		"dot-notation": 2,
		"no-unused-vars": 2,
		"no-alert": 2,
		"no-console": [
			1,
			{
				"allow": ["warn", "error", "info"]
			}
		],
		"no-debugger": 2,
		"no-shadow-restricted-names": 2,
		"no-multi-str": 2,
		"curly": 2,
		"eqeqeq": [
			2,
			"smart"
		],
		"no-undefined": 2,
		"no-undef-init": 2,
		"comma-spacing": [
			2,
			{
				"before": false,
				"after": true
			}
		]
	},
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"modules": true,
			"arrowFunctions": true,
			"destructuring": true,
			"binaryLiterals": true,
			"blockBindings": true,
			"classes": true,
			"defaultParams": true,
			"forOf": true,
			"generators": true,
			"objectLiteralComputedProperties": true,
			"objectLiteralDuplicateProperties": true,
			"objectLiteralShorthandMethods": true,
			"objectLiteralShorthandProperties": true,
			"octalLiterals": true,
			"regexUFlag": true,
			"regexYFlag": true,
			"restParams": true,
			"spread": true,
			"superInFunctions": true,
			"templateStrings": true,
			"unicodeCodePointEscapes": true,
			"globalReturn": true
		},
		"sourceType": "module"
	},
	"globals": {
		"i18n": false,
		"Game": false,
		"Memory": false
	}
}
